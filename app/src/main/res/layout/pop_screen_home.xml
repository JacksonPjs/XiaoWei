<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/loan_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="@string/loan_money"
        android:textColor="@color/black_homne_tv" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/loanview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_textview"
        tools:layoutManager="GridLayoutManager"
        tools:spanCount="4"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
<LinearLayout
    android:id="@+id/term_ll"
    android:layout_below="@+id/loan_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="@string/loan_term"
        android:textColor="@color/black_homne_tv" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/termview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_textview"
        tools:layoutManager="GridLayoutManager"
        tools:spanCount="4"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
<LinearLayout
    android:id="@+id/precision_ll"
    android:layout_below="@+id/term_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="@string/precision_label"
        android:textColor="@color/black_homne_tv" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/precisionview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_textview"
        tools:layoutManager="GridLayoutManager"
        tools:spanCount="4"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>

</RelativeLayout>
    </ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"


    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_item"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/selector_pop_dismiss"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="重置"
        />
    <TextView
        android:id="@+id/complete"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="完成"
        android:background="@drawable/selector_pop_dismiss"

        />
</LinearLayout>

</LinearLayout>
</RelativeLayout>